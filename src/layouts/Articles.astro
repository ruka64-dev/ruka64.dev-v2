---
import type { CollectionEntry } from "astro:content";
import DateFormatter from "../components/DateFormatter.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, draft } = Astro.props;
---

<article class="flex flex-col items-center mt-8">
	<div class="sm:w-[50rem] w-full border p-4 border-gray-400 rounded-2xl">
		<div>
			<h1 class="text-3xl font-bold mb-2">{title}</h1>
			<div>
				<DateFormatter date={pubDate} />
				{
					updatedDate && (
						<div>
							Updated at <DateFormatter date={updatedDate} />
						</div>
					)
				}
			</div>
			{draft && <p class="text-yellow-300 font-semibold">This is draft post!</p>}
			<hr class="mt-4 mb-4" />
		</div>
		<div
			class:list={[
				"prose-h1:font-bold",
				"prose-h2:font-bold",
				"prose-h3:font-bold",
				"prose-h4:font-bold",
				"prose-h1:text-3xl",
				"prose-h2:text-2xl",
				"prose-h3:text-xl",
				"prose-h4:text-[1rem]",
				"prose-img:rounded-xl",
				"prose-img-m-0",
				"prose-pre:mt-3",
				"prose-pre:mb-3",
				"prose-h1:mt-3",
				"prose-h1:mb-3",
				"prose-h2:mt-3",
				"prose-h2:mb-3",
				"prose-h3:mt-3",
				"prose-h3:mb-3",
				"prose-h4:mt-3",
				"prose-h4:mb-3",
				"prose-p:mt-2",
				"prose-p:mb-2",
				"prose-a:mt-2",
				"prose-a:mb-2",
				"prose-ul:list-disc",
				"prose-ul:ml-4",
			]}
		>
			<slot />
		</div>
	</div>
</article>
